<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.example.homeguard">

    <application
        android:screenOrientation="sensorPortrait"
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FirebaseTest">
        <activity
            android:name="android.example.homeguard.WebActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name="android.example.homeguard.AddRpiActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name="android.example.homeguard.RegisterActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name="android.example.homeguard.LoginActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name="android.example.homeguard.MainActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name="android.example.homeguard.StartActivity"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>